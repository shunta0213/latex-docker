{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "schedule": [
        "every weekend"
    ],
    "docker": {
        "enabled": true,
        "pinDigests": true
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchCurrentVersion": "!/^0/",
            "automerge": true
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "semanticCommits": "enabled",
            "commitMessagePrefix": "chore(deps):"
        }
    ],
    "dockerfile": {
        "fileMatch": [
            "Dockerfile$"
        ]
    }
}